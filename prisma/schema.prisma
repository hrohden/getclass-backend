// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Moment {
  id          String    @id @default(uuid())
  title       String
  headline    String?
  description String
  date        DateTime?
  isFavorite  Boolean   @default(false)
  pictureUrl  String?
}

model Identity {
  id          String    @id @default(uuid())
  name        String
  password    String
}